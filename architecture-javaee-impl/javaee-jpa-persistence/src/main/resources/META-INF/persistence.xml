<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="architecture-poc">
        <jta-data-source>java:/MyDS</jta-data-source>
        <properties>
            <property name="hibernate.dialect" moneyValue="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" moneyValue="update"/>
            <property name="hibernate.show_sql" moneyValue="true"/>
            <property name="hibernate.format_sql" moneyValue="true"/>
            <property name="hibernate.connection.charSet" moneyValue="UTF-8"/>
        </properties>
    </persistence-unit>
</persistence>
